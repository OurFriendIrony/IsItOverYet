<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.ourfriendirony.isitoveryet.activities.ActivityMain"
    tools:showIn="@layout/activity_core">

    <LinearLayout
        android:id="@+id/center_point"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal" />

    <uk.co.ourfriendirony.isitoveryet.shapes.Circle
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center_point"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center" />

    <TextView
        android:id="@+id/text_percent"
        style="@style/text_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circle"
        android:layout_alignEnd="@+id/circle"
        android:layout_alignStart="@+id/circle"
        android:layout_alignTop="@+id/circle"
        android:gravity="center"
        android:text="0%"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_general"
        style="@style/text_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_point"
        android:text="@string/PERCENT_010"
        android:textAlignment="center" />

</RelativeLayout>
